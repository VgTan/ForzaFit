<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseAvatarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="234dp"
            android:layout_height="180dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/cloud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="-90dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/cloud"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="91dp"
            android:layout_height="234dp"
            android:layout_marginBottom="-20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/grass1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="131dp"
            android:layout_height="290dp"
            android:layout_marginBottom="-20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/grass2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="160dp"
            android:src="@drawable/grass3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/grass3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:src="@drawable/vector_28"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avatar!"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center|end"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="119dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/chicken" />

                    <Button
                        android:id="@+id/ChickenSelect"
                        android:layout_width="97dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:backgroundTint="@color/secondary"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:padding="0dp"
                        android:text="Select"
                        android:textColor="@color/main"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:strokeColor="@color/main"
                        app:strokeWidth="2sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="119dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/bear" />

                    <Button
                        android:id="@+id/BearSelect"
                        android:layout_width="97dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:backgroundTint="@color/secondary"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:padding="0dp"
                        android:text="Select"
                        android:textColor="@color/main"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:strokeColor="@color/main"
                        app:strokeWidth="2sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>