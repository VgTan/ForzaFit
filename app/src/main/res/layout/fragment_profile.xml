<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgProfile"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_placeholder" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/profile_placeholder"
                android:padding="4dp"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

            <ImageView
                android:id="@+id/imgEditProfile"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Profile"
                android:layout_gravity="end"
                android:layout_marginTop="225dp"
                android:layout_marginEnd="16dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <TextView
                        android:id="@+id/txtUserAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/white" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end">

                        <TextView
                            android:id="@+id/txtBMI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:id="@+id/txtLastCalculated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp">

                <ImageView
                    android:id="@+id/graphOutline"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_margin="8dp"
                    android:src="@drawable/outline_placeholder" />

                <ImageView
                    android:id="@+id/imgGraph"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/graph_placeholder" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp">

                <LinearLayout
                    android:id="@+id/linearProgressThisWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/txtProgressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Progress This Week"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/txtPushUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Push Up   x10"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtSitUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sit Up   x10"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtJogging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jogging   200km"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
